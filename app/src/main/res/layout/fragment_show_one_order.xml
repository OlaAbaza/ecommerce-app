    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.showOneOrderDetails.ShowOneOrderFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/state_circle_shape"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_pay"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waiting_for_payment"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintBottom_toTopOf="@id/orderIDNotEditable"
                app:layout_constraintStart_toEndOf="@id/line1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/orderIDNotEditable"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Order"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_pay" />

            <TextView
                android:id="@+id/orderIdEditable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/_111111111111111111111"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/orderIDNotEditable"
                app:layout_constraintTop_toBottomOf="@id/tv_pay" />



            <TextView
                android:id="@+id/priceNotEditable"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Total:"
                app:layout_constraintEnd_toStartOf="@+id/totalPriceEditable"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/orderIdEditable" />


            <TextView
                android:id="@+id/totalPriceEditable"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/_170"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/priceNotEditable"
                app:layout_constraintTop_toBottomOf="@id/orderIdEditable" />

            <TextView
                android:id="@+id/currency_code"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/egp"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/totalPriceEditable"
                app:layout_constraintStart_toEndOf="@id/totalPriceEditable" />

            <TextView
                android:id="@+id/created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/created_at"
                android:padding="5dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/totalPriceEditable" />

            <TextView
                android:padding="5dp"
                android:id="@+id/createdAtEditable"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2021_05_31t23_47_47_02_00"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/created_at"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/totalPriceEditable"
                app:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/created_at"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/payment_type"
                android:padding="5dp"
                style="@style/text_style"
                android:id="@+id/paymentTypeNotEditable"
                />
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/created_at"
                app:layout_constraintStart_toEndOf="@id/paymentTypeNotEditable"
                android:text="@string/payment_type"
                style="@style/text_style"
                android:id="@+id/paymentTypeEditable"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:id="@+id/imageItemsRecycler"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/paymentTypeEditable"
                />



